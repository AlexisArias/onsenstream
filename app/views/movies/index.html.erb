<% @movies.each do |movie| %>
<div>
    <h2><%= movie.title %></h2>
    <p><%= movie.genre %></p>
    <p><%= movie.director %></p>
    <p><%= movie.year %></p>
    <p><%= movie.description %></p>
    <p><%= movie.casting%></p>
